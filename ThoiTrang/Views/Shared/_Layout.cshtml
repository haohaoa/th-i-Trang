@using ThoiTrang.ViewModel
<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>

    <link href='https://fonts.googleapis.com/css?family=Lato:400,300,700,900' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Crimson+Text:400,400italic,600,600italic,700,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Raleway:400,700,500' rel='stylesheet' type='text/css'>
    <link href="~/public/html/css/style.css" rel="stylesheet" />
    <link href="~/public/html/css/superslides.css" rel="stylesheet" />
    <link href="~/public/html/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/public/html/css/jquery.mCustomScrollbar.css" rel="stylesheet" />
    <link href="~/public/html/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/public/html/css/magnific-popup.css" rel="stylesheet" />
    <link href="~/public/html/css/owl.carousel.css" rel="stylesheet" />
    <link href="~/public/html/css/easyzoom.css" rel="stylesheet" />
    <link href="~/public/html/css/animate.css" rel="stylesheet" />
    <link href="~/public/html/css/chosen.css" rel="stylesheet" />

    @RenderSection("header", required: false)
</head>

<body>
  
    <header class="header">

        <div class="main-header">
            <div class="container main-header-inner">
                <div id="form-search" class="form-search" style="display: none;">
                    <form method="get" action="@Url.Action("search","Home")">
                        <input  name="search" type="text" placeholder="YOU CAN SEARCH HERE..." required/>
                      
                    </form>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="logo">
                            <a href="index.html"><img src="~/public/html/images/logo.png" alt="" /></a>
                        </div>
                    </div>
                    <div class="col-sm-10 main-menu-wapper">
                        <a href="#" class="mobile-navigation"><i class="fa fa-bars"></i></a>
                        <nav id="main-menu" class="main-menu">
                            <ul class="navigation">
                                @if (Session["Username"] == null)
                                {

                                }
                                else
                                {
                                    <li class="menu-item-has-children">
                                        welcome @Session["Username"]
                                    </li>
                                }

                                <li class="menu-item-has-children">
                                    <a href="@Url.Action("index", "Home")">Home</a>
                                </li>
                                <li><a href="@Url.Action("Shop","Home")">Products</a></li>

                                @if (Session["UserId"] == null)
                                {
                                    <li><a href="@Url.Action("Login","Home")"><i class="fa fa-key"></i> LOGIN</a></li>
                                }
                                else
                                {
                                    <li><a href="@Url.Action("Logout","Home")"><i class="fa fa-key"></i> LOGOUT</a></li>
                                }
                            </ul>
                        </nav>
                    </div>
                    <div class="col-sm-2">
                        <!-- Icon search -->
                        <div class="icon-search">
                           
                            <button class="btn-search"><i class="fa fa-search"></i></button>
                        </div>
                        <!-- ./Icon search -->
                        <!-- Mini cart -->
                        <div class="mini-cart">
                            <a class="icon" href="@Url.Action("ViewCart","Home") ">
                                Cart
                                @if (Session["CartItems"] != null)
                                {
                                    var cartItems = Session["CartItems"] as List<CartItemViewModel>;
                                    <span class="count">
                                        @cartItems.Count
                                    </span>
                                }
                                else
                                {

                                }


                            </a>
                            <div class="mini-cart-content">
                                <ul class="list-cart-product">
                                    @if (Session["CartItems"] != null)
                                    {
                                        var cartItems = Session["CartItems"] as List<CartItemViewModel>;
                                        foreach (var item in cartItems)
                                        {
                                            <li>
                                                <div class="product-thumb">
                                                    <a href="#"><img src="~/public/html/images/products/@item.Product.img" alt="@item.Product.Name" /></a>
                                                </div>
                                                <div class="product-info">
                                                    <h5 class="product-name"><a href="#">@item.Product.Name</a></h5>
                                                    <span class="price">@item.Product.Price.ToString("N0") VND</span>
                                                    <span class="qty">Qty: @item.Quantity</span>
                                                    <a href="#" class="remove">remove</a>
                                                </div>
                                            </li>
                                        }
                                    }
                                    else
                                    {
                                        <li>Your cart is empty</li>
                                    }
                                </ul>
                                <a href="@Url.Action("ViewCart","Home")" class="btn-view-cart">VIEW SHOPPING CART</a>
                            </div>
                        </div>
                        <!-- ./Mini cart -->
                    </div>
                </div>
            </div>
        </div>
    </header>

    @RenderBody()

    <footer class="footer">
