@model List<ThoiTrang.ViewModel.CartItemViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="banner banner-cart bg-parallax">
    <div class="overlay"></div>
    <div class="container">
        <div class="banner-content text-center">
            <h2 class="page-title">SHOPPING CART</h2>
        </div>
    </div>
</section>
<div class="maincontainer">
    <div class="container">
        <!-- Table cart -->
        <table class="shop_table cart">
            <thead>
                <tr>
                    <th class="product-thumbnail">Product</th>
                    <th class="product-name">Name</th>
                    <th class="product-quantity">Quantity</th>
                    <th class="product-price">Price</th>
                    <th class="product-subtotal">Total price</th>
                    <th class="product-remove">&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                @{
                    decimal totalAmount = 0; // Biến để lưu tổng giá trị giỏ hàng
                }
                @foreach (var item in Model)
                {
                    <tr class="cart_item">
                        <td class="product-thumbnail">
                            <a href="#">
                                <img src="~/public/html/images/products/@item.Product.img" alt="@item.Product.Name" />
                            </a>
                        </td>
                        <td class="product-name">
                            <a href="#">@item.Product.Name</a>
                        </td>
                        <td class="product-quantity">
                            <div class="box-qty">
                                <h4>@item.Quantity</h4>
                            </div>
                        </td>
                        <td class="product-price">
                            <span class="amount">@item.Product.Price.ToString("N0") VND</span>
                        </td>
                        <td class="product-subtotal">
                            <span class="amount">
                                @{
                                    var subtotal = item.Product.Price * item.Quantity;
                                    totalAmount += subtotal; // Cộng dồn vào tổng giá trị
                                }
                                <span class="amount">@subtotal.ToString("N0") VND</span>
                            </span>
                        </td>
                        <td class="product-remove">
                            <a class="remove" href="#"><i class="fa fa-times"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="cart-collaterals">
            <div class="row">
                <div class="col-sm-12 col-md-4">
                    <div class="cart_totals">
                        <h2>Cart Totals</h2>
                        <table>
                            <tbody>
                                <tr class="order-total">
                                    <th>Total</th>
                                    <td>
                                        <strong><span class="amount">@totalAmount.ToString("N0") VND</span></strong>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="wc-proceed-to-checkout">
                            <a href="#" class="checkout-button button alt wc-forward">PROCEED TO CHECKOUT</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
